<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_search"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/container_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/container_images_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"

                    >

                    <ImageView
                        android:id="@+id/container_images_warning_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:src="@drawable/images"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/container_images_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/images_warning_search"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"
                        />
                </LinearLayout>

            </LinearLayout>

            <!--Separator-->
            <include layout="@layout/separator" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_dictionaries"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/container_dictionaries_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/container_dictionaries_warning_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/search"
                    android:gravity="center"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/container_dictionaries_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dictionaries_warning_search"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/colorGrey"


                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>