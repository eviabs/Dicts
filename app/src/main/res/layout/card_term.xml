<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_term_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        style="@style/CardTermStyle"
        android:id="@+id/card_term"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Dictionary Icon-->
            <ImageView
                android:id="@+id/card_dictionary_icon"
                android:layout_width="@dimen/dictionary_icon_size"
                android:layout_height="@dimen/dictionary_icon_size"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/description_image_icon"
                />

            <!-- Warning layout -->
            <include layout="@layout/card_warning_layout" />

            <!-- Definition -->
            <LinearLayout
                android:id="@+id/linear_layout_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout >

    </android.support.v7.widget.CardView>

</LinearLayout>